<?xml version="1.0"?>
<block>
  <name>Annotation Sink</name>
  <key>sigmf_annotation_sink</key>
  <category>[SigMF]</category>
  <import>import sigmf</import>
  <make>#if $annotation_mode() == 'clear'
sigmf.annotation_sink($filename, sigmf.annotation_mode.$annotation_mode()($filter_key), $time_mode)
#else
sigmf.annotation_sink($filename, sigmf.annotation_mode.$annotation_mode()(), $time_mode)
#end if</make>
  <param>
    <name>SigMF File</name>
    <key>filename</key>
    <type>file_open</type>
  </param>

  <param>
    <name>Annotation Mode</name>
    <key>annotation_mode</key>
    <type>enum</type>
    <option>
      <name>Keep Existing</name>
      <key>keep</key>
    </option>
    <option>
      <name>Clear Existing</name>
      <key>clear</key>
    </option>
  </param>

  <param>
    <name>Filter Key</name>
    <key>filter_key</key>
    <type>string</type>
    <hide>#if $annotation_mode() == 'clear' then 'part' else 'all'#</hide>
  </param>

  <param>
    <name>Time Handling Mode</name>
    <key>time_mode</key>
    <type>enum</type>
    <option>
      <name>Absolute</name>
      <key>sigmf.sigmf_time_mode_absolute</key>
    </option>
    <option>
      <name>Relative</name>
      <key>sigmf.sigmf_time_mode_relative</key>
    </option>
  </param>
  <sink>
    <name>annotations</name>
    <type>message</type>
  </sink>

</block>
