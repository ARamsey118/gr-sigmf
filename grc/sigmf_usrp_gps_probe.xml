<?xml version="1.0"?>
<block>
  <name>USRP GPS Probe</name>
  <key>sigmf_usrp_gps_probe</key>
  <category>[SigMF]</category>
  <import>import sigmf</import>
  <make>sigmf.usrp_gps_probe(self.$block_id(), $interval, $require_valid)</make>

  <param>
    <name>USRP Block ID</name>
    <key>block_id</key>
    <value>uhd_usrp_source_0</value>
    <type>string</type>
  </param>
  <param>
    <name>Probe Interval (ms)</name>
    <key>interval</key>
    <value>1000</value>
    <type>real</type>
  </param>
  <param>
    <name>Require Valid Fix</name>
    <key>require_valid</key>
    <value>True</value>
    <type>enum</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
